<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <com.chatapp.common.CustomTextView

        style="@style/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/lbl_signup"></com.chatapp.common.CustomTextView>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_ti_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/activity_register_et_firstname"
            style="@style/normal_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_first_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            app:font="@string/font_OpenSans_Light"
            tools:text="sdlskdlksldksldlsdklsdkls" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_ti_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/activity_register_et_lastname"
            style="@style/normal_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_lastname"
            android:imeOptions="actionNext"
            android:inputType="text"
            app:font="@string/font_OpenSans_Light"
            tools:text="sdlskdlksldksldlsdklsdkls" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_ti_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/activity_register_et_email"
            style="@style/normal_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            app:font="@string/font_OpenSans_Light"
            tools:text="sdlskdlksldksldlsdklsdkls" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_register_ti_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:theme="@style/TextLabel">

        <EditText
            android:id="@+id/activity_register_et_password"
            style="@style/normal_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:inputType="textEmailAddress"
            app:font="@string/font_OpenSans_Light"
            tools:text="sdlskdlksldksldlsdklsdkls" />

    </android.support.design.widget.TextInputLayout>

    <com.chatapp.common.CustomButton
        android:id="@+id/activity_register_btn_signup"
        style="@style/bluebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/lbl_signup"
        app:font="@string/font_OpenSans_Regular" />

</LinearLayout>