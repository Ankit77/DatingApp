<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/fragment_home_rrSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <FrameLayout
            android:id="@+id/FrameLayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <SurfaceView
                android:id="@+id/fragment_home_surfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/main_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fragment_home_ivCameraSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/FrameLayout01"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/fragment_home_ivCameraFlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/FrameLayout01"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:padding="@dimen/_10sdp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_home_recycleViewImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"

        android:padding="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/fragment_home_llCapture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_home_ivGallery"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fragment_home_ivCaptureVideo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/fragment_home_ivCaptureImage"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>

