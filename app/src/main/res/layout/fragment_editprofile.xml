<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:padding="@dimen/layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center_horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/fragment_editprofile_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_placeholder" />

            <ImageView
                android:id="@+id/fragment_editprofile_imgdelete1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="right|top"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pencil" />
        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/fragment_editprofile_img2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_placeholder" />

                    <ImageView
                        android:id="@+id/fragment_editprofile_imgdelete2"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right|top"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pencil" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/fragment_editprofile_img3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_placeholder" />

                    <ImageView
                        android:id="@+id/fragment_editprofile_imgdelete3"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right|top"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pencil" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/fragment_editprofile_img4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_placeholder" />

                    <ImageView
                        android:id="@+id/fragment_editprofile_imgdelete4"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right|top"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_pencil" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/fragment_editprofile_img5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_8sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_placeholder" />

                    <ImageView
                        android:id="@+id/fragment_editprofile_imgdelete5"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="right|top"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_delete" />
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_about_me"
                app:font="@string/font_OpenSans_Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/white"
                android:orientation="vertical">

                <com.chatapp.common.CustomEdittext
                    android:id="@+id/fragment_editprofile_et_aboutme"
                    style="@style/normal_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="top"
                    android:padding="@dimen/_5sdp"
                    android:text="10/400"
                    android:textSize="@dimen/_14sdp"
                    app:font="@string/font_OpenSans_Light" />

                <com.chatapp.common.CustomTextView
                    android:id="@+id/fragment_editprofile_tv_wordcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@android:color/transparent"
                    android:gravity="bottom|right"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="10/400"
                    android:textColor="@color/charcoal"
                    android:textSize="@dimen/_8sdp"
                    app:font="@string/font_OpenSans_Light" />
            </LinearLayout>

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_current_job"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_currentjob"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="software engineet"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_relationship"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_relationship"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Single"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_natioanlity"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_nationality"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Indian"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_height"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_height"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="5.7"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_weight"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_weight"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="5.7"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_faith"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.common.CustomEdittext
                android:id="@+id/fragment_editprofile_et_faith"
                style="@style/normal_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@android:color/white"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Hindu"
                android:textSize="@dimen/_14sdp"
                app:font="@string/font_OpenSans_Light" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_gender"
                app:font="@string/font_OpenSans_Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/white">

                <RadioGroup
                    android:id="@+id/fragment_editprofile_rg_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fragment_setting_tv_distance_unit"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/fragment_editprofile_rb_male"
                        style="@style/setting_normal_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent"
                        android:checked="true"
                        android:text="@string/lbl_male"
                        android:textSize="@dimen/_12sdp"
                        app1:font="@string/font_OpenSans_Semibold" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/fragment_editprofile_rb_female"
                        style="@style/setting_normal_black_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorAccent"
                        android:text="@string/lbl_female"
                        android:textSize="@dimen/_12sdp"
                        app1:font="@string/font_OpenSans_Semibold" />
                </RadioGroup>
            </LinearLayout>

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_interest"
                app:font="@string/font_OpenSans_Bold" />

            <com.chatapp.chipedittext.EditTag
                android:id="@+id/fragment_editprofile_et_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/white"
                android:minHeight="@dimen/_30sdp"
                app:input_layout="@layout/view_default_input_tag"
                app:tag_layout="@layout/view_default_tag" />

            <com.chatapp.common.CustomTextView
                style="@style/bold_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/lbl_control_profile"

                app:font="@string/font_OpenSans_Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_5sdp">

                    <com.chatapp.common.CustomTextView
                        style="@style/setting_normal_black_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Age"
                        android:textSize="@dimen/_12sdp"
                        app1:font="@string/font_OpenSans_Semibold" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/fragment_editprofile_sc_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        card_view:thumbTint="@color/colorAccent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_5sdp">

                    <com.chatapp.common.CustomTextView
                        style="@style/setting_normal_black_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Distance"
                        android:textSize="@dimen/_12sdp"
                        app1:font="@string/font_OpenSans_Semibold" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/fragment_editprofile_sc_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        card_view:thumbTint="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>