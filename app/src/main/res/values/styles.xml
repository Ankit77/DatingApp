<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="title_textview">
        <item name="android:textColor">#ff5377</item>
        <item name="android:textSize">@dimen/_28sdp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="normal_edittext">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/dark_grey</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="pinkbutton">
        <item name="android:background">@drawable/roundedborder_pinkbutton</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="greybutton">
        <item name="android:background">@drawable/roundedcorner_greybutton</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="bluebutton">
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>


    <style name="bold_label">
        <item name="android:textColor">#3d4254</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="setting_bold_label">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="setting_normal_black_text">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>


    <style name="setting_bold_pink_text">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="TextStyle.Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/manatee</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="PACV.TextAppearance.PlacesAutoComplete" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PACV.Widget.PlacesAutoCompleteTextView" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="pacv_historyFile">@string/pacv_default_history_file_name</item>
        <item name="pacv_resultType">address</item>
    </style>
</resources>
